<script> 
  function submit2(idx, frm) {
	alert("idx:"+idx);
    frm.action='/stexample8/replyProcess.do';
    $("[name=replyid]").val(  $("[name=replyid"+idx+"]").val() );
    $("[name=bno]").val(  $("[name=bno"+idx+"]").val() );/*name을 가져올땐 []로 가져온다*/
    $("[name=replytext]").val(  $("[name=replytext"+idx+"]").val() );
    frm.submit(); 
    return true; 
    /*.val()일때는 값을 가벼오고 .val(값이 있을때는)val안의 값을 앞의 괄호에 대입시킨다*/
  } 
